<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Homepages</title>
</head>

<body>
    <div class="container mt-5">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Tambah
            Buku</button>
        {{!-- <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Tambah
            Kategori</button> --}}
    </div>
    <div class="container mt-5 d-flex ">
        <div class="d-flex flex-row flex-wrap justify-content-center align-items-start">
            {{#each results}}
            <div class="d-flex mt-3 mr-4">
                <div class="card" style="width: 18rem; max-height: 450px">
                    <img class="card-img-top" src="..." alt="Card image cap" width="100%" height="200px"
                        style="background: red;">
                    <div class="card-body">
                        <h5 class="card-title">{{ name }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{ nama }}</h6>
                        <p class="card-text">{{ deskripsi }}</p>
                        <div class="row">
                            <a href="#" class="btn btn-primary col-sm mr-1">Pinjam</a>
                            <a href="#" class="btn btn-primary col-sm mr-1">Pinjam</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>


    {{!-- modal insert --}}
    <form action="/save" method="post">
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <label for="book_name" class="col-form-label">Nama Buku:</label>
                                <input type="text" class="form-control" name="book_name" required>
                            </div>
                            <div class="form-group">
                                <label for="book_stock" class="col-form-label">Stok:</label>
                                <input type="number" name="book_stock" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="book_image" class="col-form-label">Gambar:</label>
                                <input type="file" name="book_image" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="book_deskripsi" class="col-form-label">Deskripsi:</label>
                                <textarea class="form-control" name="book_deskripsi"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="book_kategori" class="col-form-label">Kategori:</label>
                                <select id="kategori" name="book_kategori" class="form-control" required>
                                    <option value="1">Novel</option>
                                    <option value="2">Biografi</option>
                                    <option value="3">Komik</option>
                                </select>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Tambahkan</button>
                    </div>
                </div>
            </div>
        </div>
    </form>



    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
</body>

</html>